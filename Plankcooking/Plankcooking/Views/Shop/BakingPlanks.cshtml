@model AddOrderItem

@{
    ViewData["Title"] = "BakingPlanks | Plankcooking.com";
    List<Product> smallCedarPlanks = new List<Product>();
    List<Product> largeCedarPlanks = new List<Product>();
    List<Product> alderPlanks = new List<Product>();
}

@Html.Partial("_ShopPartial")
<div class="shop-content container-fluid col-xs-12 col-md-9">
    <div class="shop-header hidden-xs hidden-sm">
        <img class="shop-img" src="~/images/BakingPlanks_Header.png" />
    </div>
    <div class="shop-header-sm container-fluid hidden-md hidden-lg">
        <img class="img-responsive" src="~/images/BakingPlanks_Header.png" />
    </div>
    <div class="img-responsive paper-background">
        <div class="container-fluid shop-container">
            <p class="left-align" class="stop-p">
                Cedar and Alder planks impart a subtle yet full flavored aroma to anything roasted on them. Our planks are made from clear kiln dried Western Red Cedar and Alder. Cedar roasting planks come in two sizes. Alder planks are available in one size only.
            </p>


            @foreach (var product in Model.Products.OrderBy(p => p.SortOrder))
            {
                if (product.Name == "Small Cedar Plank")
                {
                    smallCedarPlanks.Add(product);
                }
                else if (product.Name == "Large Cedar Plank")
                {
                    largeCedarPlanks.Add(product);
                }
                else
                {
                    alderPlanks.Add(product);
                }
            }

            @if (smallCedarPlanks.Count > 0)
            {
                <div class="dotted_line_top">
                    <div class="content-titles-Shop dotted_line_bottom dotted_line_right">
                        @smallCedarPlanks.FirstOrDefault().Name
                    </div>
                    <p class="left-align">@smallCedarPlanks.FirstOrDefault().Description</p>
                </div>

                <div class="shop-description">
                    <div class="container-fluid shop-mod">

                        <p class="left-align">@smallCedarPlanks.FirstOrDefault().Name</p>
                        <img src="@smallCedarPlanks.FirstOrDefault().ImagePath" class="left-align-pic" />
                        <p>&nbsp;</p>
                        <p class="left-align">@smallCedarPlanks.LastOrDefault().Description</p>
                    </div>
                    <div>
                        @foreach (var product in smallCedarPlanks)
                        {
                            <div class="container-fluid">
                                <form asp-action="AddToCart">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group flexInline">
                                        <div>
                                            <label asp-for="Qty" class="control-label">Quantity:</label>
                                        </div>
                                        <div>
                                            <input asp-for="Qty" class="form-control qty" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="hidden" asp-for="ProductId" class="form-control" value="@product.ProductId" />
                                    </div>
                                    <div class="form-group">
                                        <input type="image" value="AddToCart" class="btn" src="~/images/AddToCart_button.png" />
                                    </div>
                                </form>
                                @if (product == @smallCedarPlanks.FirstOrDefault())
                                {
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                }
                            </div>

                        }
                    </div>
                </div>
            }

            @if (largeCedarPlanks.Count > 0)
            {
                <div class="dotted_line_top">
                    <div class="content-titles-Shop dotted_line_bottom dotted_line_right">
                        @largeCedarPlanks.FirstOrDefault().Name
                    </div>
                    <p class="left-align">@largeCedarPlanks.FirstOrDefault().Description</p>
                </div>

                <div class="shop-description">
                    <div class="container-fluid shop-mod">

                        <p class="left-align">@largeCedarPlanks.FirstOrDefault().Name</p>
                        <img src="@largeCedarPlanks.FirstOrDefault().ImagePath" class="left-align-pic" />
                        <p>&nbsp;</p>
                        <p class="left-align">@largeCedarPlanks.LastOrDefault().Description</p>
                    </div>
                    <div>
                        @foreach (var product in largeCedarPlanks)
                        {
                            <div class="container-fluid">
                                <form asp-action="AddToCart">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group flexInline">
                                        <div>
                                            <label asp-for="Qty" class="control-label">Quantity:</label>
                                        </div>
                                        <div>
                                            <input asp-for="Qty" class="form-control qty" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="hidden" asp-for="ProductId" class="form-control" value="@product.ProductId" />
                                    </div>
                                    <div class="form-group">
                                        <input type="image" value="AddToCart" class="btn" src="~/images/AddToCart_button.png" />
                                    </div>
                                </form>
                                @if (product == @largeCedarPlanks.FirstOrDefault())
                                {
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                }
                            </div>

                        }
                    </div>
                </div>
            }

            @if (alderPlanks.Count > 0)
            {
                <div class="dotted_line_top">
                    <div class="content-titles-Shop dotted_line_bottom dotted_line_right">
                        @alderPlanks.FirstOrDefault().Name
                    </div>
                    <p class="left-align">@alderPlanks.FirstOrDefault().Description</p>
                </div>

                <div class="shop-description">
                    <div class="container-fluid shop-mod">

                        <p class="left-align">@alderPlanks.FirstOrDefault().Name</p>
                        <img src="@alderPlanks.FirstOrDefault().ImagePath" class="left-align-pic" />
                        <p>&nbsp;</p>
                        <p class="left-align">@alderPlanks.LastOrDefault().Description</p>
                    </div>
                    <div>
                        @foreach (var product in alderPlanks)
                        {
                            <div class="container-fluid">
                                <form asp-action="AddToCart">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group flexInline">
                                        <div>
                                            <label asp-for="Qty" class="control-label">Quantity:</label>
                                        </div>
                                        <div>
                                            <input asp-for="Qty" class="form-control qty" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="hidden" asp-for="ProductId" class="form-control" value="@product.ProductId" />
                                    </div>
                                    <div class="form-group">
                                        <input type="image" value="AddToCart" class="btn" src="~/images/AddToCart_button.png" />
                                    </div>
                                </form>
                                @if (product == @alderPlanks.FirstOrDefault())
                                {
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                }
                            </div>

                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

